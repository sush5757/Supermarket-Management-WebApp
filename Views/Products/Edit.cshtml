@model ProductViewModel

@section title {
    @if(Model != null)
    {
        <h3>Product : @Model.Product?.Name</h3>
    }
    
}

<form method="post" asp-controller="products" asp-action="edit">
    <input type="hidden" asp-for="Product.ProductId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Product.CategoryId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select asp-for="Product.CategoryId" class="form-control">
                <option value="">- Please Select -</option>
                @if (Model.Categories != null && Model.Categories.Count() > 0)
                {
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                }

            </select>
        </div>
        <div class="col-4">
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Product.Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Name" class="form-control" />
        </div>
        <div class="col-4">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Product.Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Price" class="form-control" min="0" step="any" />
        </div>
        <div class="col-4">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Product.Quantity" class="col-form-label"></label>
        </div>

        <div class="col-6">
            <input type="number" asp-for="Product.Quantity" class="form-control" min="1" />
        </div>

        <div class="col-4">
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>

    </div>

    <div class="mb-3 row">

        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save Product" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>
